<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/login_nav"
    app:startDestination="@id/loginEmailFragment">

    <fragment
        android:id="@+id/loginEmailFragment"
        android:name="com.audiobookz.nz.app.login.ui.LoginEmailFragment"
        android:label="Login" >
        <action
            android:id="@+id/action_loginEmailFragment_to_payPalWebViewFragment"
            app:destination="@id/payPalWebViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/payPalWebViewFragment"
        android:name="com.audiobookz.nz.app.basket.ui.PayPalWebViewFragment"
        android:label="Upgrade to Pro" >
        <argument
            android:name="linkUrl"
            app:argType="string"/>
        <argument
            android:name="NavigateFrom"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>