<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/browse">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.audiobookz.nz.app.browse.categories.ui.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/audiobookListFragment"
        android:name="com.audiobookz.nz.app.audiobookList.ui.AudiobookListFragment"
        android:label="List"
        tools:layout="@layout/fragment_audiobook_list">
        <argument
            android:name="id"
            app:argType="integer" />

        <argument
            android:name="titleList"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <!--search title and author-->
        <argument
            android:name="keyword"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <!--create arg listFeatured nullable to store data from FeaturedTypeAdapter-->
        <argument
            android:name="listItem"
            android:defaultValue="@null"
            app:argType="com.audiobookz.nz.app.browse.featured.data.Featured[]"
            app:nullable="true" />

        <action
            android:id="@+id/action_AudiobookListFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.audiobookz.nz.app.browse.categories.ui.SubCategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_sub_categories">
        <argument
            android:name="SubCategories"
            android:defaultValue="@null"
            app:argType="com.audiobookz.nz.app.browse.categories.data.Category[]"
            app:nullable="true" />
        <argument
            android:name="tileName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_subCategoryFragment_to_AudiobookListFragment"
            app:destination="@id/audiobookListFragment" />
    </fragment>

    <fragment
        android:id="@+id/browse"
        android:name="com.audiobookz.nz.app.browse.BrowseFragment"
        android:label="Browse"
        tools:layout="@layout/fragment_browse">
        <action
            android:id="@+id/action_browseFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_browseFragment_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
        <action
            android:id="@+id/action_browseFragment_to_AudiobookListFragment"
            app:destination="@id/audiobookListFragment" />
        <action
            android:id="@+id/action_browseFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.audiobookz.nz.app.bookdetail.ui.BookDetailFragment"
        android:label="Book Detail"
        tools:layout="@layout/fragment_book_detail">

        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="bookName"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_bookDetailFragment_to_AudiobookListFragment"
            app:destination="@id/audiobookListFragment" />
    </fragment>
    <fragment
        android:id="@+id/me"
        android:name="com.audiobookz.nz.app.profile.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_me_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_me_to_webViewProfileFragment"
            app:destination="@id/webViewProfileFragment" />

    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.audiobookz.nz.app.profile.ui.EditProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/webViewProfileFragment"
        android:name="com.audiobookz.nz.app.profile.ui.WebViewProfileFragment"
        android:label=""
        tools:layout="@layout/fragment_webview_profile" >
        <argument
            android:name="linkName"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/mylibrary"
        android:name="com.audiobookz.nz.app.mylibrary.ui.MyLibraryFragment"
        android:label="My Library"
        tools:layout="@layout/fragment_mylibrary">
        <action
            android:id="@+id/action_mylibrary_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
        <action
            android:id="@+id/action_mylibrary_to_bookDownloadFragment"
            app:destination="@id/bookDownloadFragment" />
        <action
            android:id="@+id/action_mylibrary_to_rateAndReviewFragment"
            app:destination="@id/rateAndReviewFragment" />
        <action
            android:id="@+id/action_mylibrary_to_AudiobookListFragment"
            app:destination="@id/audiobookListFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookDownloadFragment"
        android:name="com.audiobookz.nz.app.mylibrary.ui.BookDownloadFragment"
        android:label="Book Download"
        tools:layout="@layout/fragment_book_download">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="licenseId"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="bookId"
            app:argType="string" />
        <argument
            android:name="contentId"
            app:argType="string" />
        <argument
            android:name="authors"
            app:argType="string" />
        <argument
            android:name="narrators"
            app:argType="string" />
        <argument
            android:name="url"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/rateAndReviewFragment"
        android:name="com.audiobookz.nz.app.review.RateAndReviewFragment"
        android:label="@string/optionReview"
        tools:layout="@layout/fragment_rate_and_review">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="author"
            app:argType="string" />
        <argument
            android:name="narrator"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/more"
        android:name="com.audiobookz.nz.app.more.ui.MoreFragment"
        android:label="More"
        tools:layout="@layout/fragment_more" >
        <action
            android:id="@+id/action_moreFragment_to_wishlistFragment"
            app:destination="@id/wishlistFragment" />
        <action
            android:id="@+id/action_moreFragment_to_addCreditsFragment"
            app:destination="@id/addCreditsFragment" />
    </fragment>
    <fragment
        android:id="@+id/wishlistFragment"
        android:name="com.audiobookz.nz.app.more.ui.WishListFragment"
        android:label="Wish List"
        tools:layout="@layout/fragment_wishlist" >
        <action
            android:id="@+id/action_wishlistFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCreditsFragment"
        android:name="com.audiobookz.nz.app.more.ui.AddCreditsFragment"
        android:label="Buy Credits"
        tools:layout="@layout/fragment_add_credits" >
        <action
            android:id="@+id/action_addCreditsFragment_to_payPalWebViewFragment"
            app:destination="@id/payPalWebViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/payPalWebViewFragment"
        android:name="com.audiobookz.nz.app.basket.ui.PayPalWebViewFragment"
        android:label="PayPalWebViewFragment" >
        <argument
            android:name="linkUrl"
            app:argType="string"/>
    </fragment>

</navigation>