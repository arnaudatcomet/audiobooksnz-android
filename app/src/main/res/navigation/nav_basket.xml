<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_basket"
    app:startDestination="@id/basketFragment">

    <fragment
        android:id="@+id/basketFragment"
        android:name="com.audiobookz.nz.app.basket.ui.BasketFragment"
        android:label="View Basket"
        tools:layout="@layout/fragment_basket">
        <action
            android:id="@+id/action_basketFragment_to_confirmOrderFragment"
            app:destination="@id/confirmOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmOrderFragment"
        android:name="com.audiobookz.nz.app.basket.ui.ConfirmOrderFragment"
        android:label="Confirm Order"
        tools:layout="@layout/fragment_confirm_order">
        <argument
        android:name="coupon"
        android:defaultValue="@null"
        app:argType="string"
        app:nullable="true" />
        <action
            android:id="@+id/action_confirmOrderFragment_to_payPalWebViewFragment"
            app:destination="@id/payPalWebViewFragment"
            app:popUpTo="@id/basketFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/payPalWebViewFragment"
        android:name="com.audiobookz.nz.app.basket.ui.PayPalWebViewFragment"
        android:label="PayPalWebViewFragment" >
        <argument
            android:name="linkUrl"
            app:argType="string"/>
        <argument
            android:name="NavigateFrom"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>