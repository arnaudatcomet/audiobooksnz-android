<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.audiobookz.nz.app.browse.categories.ui.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_categories"
        >

        <action
            android:id="@+id/action_categoryFragment_to_categoryDetailFragment"
            app:destination="@id/AudiobookListFragment" />
        <action
            android:id="@+id/action_categoryFragment_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
    </fragment>
    <fragment

        android:id="@+id/AudiobookListFragment"
        android:name="com.audiobookz.nz.app.audiobookList.ui.AudiobookListFragment"
        android:label="AudiobookListFragment"
        tools:layout="@layout/fragment_audiobook_list"
        >
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>
    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.audiobookz.nz.app.browse.categories.ui.SubCategoryFragment"
        android:label="SubCategoryFragment"
        tools:layout="@layout/fragment_sub_categories">
        <argument
            android:name="SubCategories"
            app:argType="com.audiobookz.nz.app.browse.categories.data.Category[]"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_subCategoryFragment_to_AudiobookListFragment"
            app:destination="@id/AudiobookListFragment" />
    </fragment>
</navigation>