<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="subscriptionClick"
            type="android.view.View.OnClickListener"/>
    </data>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".more.ui.UpgradeProFragment">

        <ProgressBar
            android:id="@+id/upgradeProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/blurbTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_marginTop="50dp"
            android:text="@string/blurb" />

        <Button
            android:id="@+id/subscriptionBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/blurbTxt"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorMain"
            android:text="@string/subscription"
            android:onClick="@{subscriptionClick}"
            />

    </RelativeLayout>
</layout>