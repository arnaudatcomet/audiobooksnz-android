<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="goToBookmarks"
            type="android.view.View.OnClickListener" />

        <variable
            name="clickOptionMenuListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="swipeDelete"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <com.chauthai.swipereveallayout.SwipeRevealLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:dragEdge="left"
                app:mode="same_level">

                <!-- Your secondary layout here -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_red_dark"
                    android:onClick="@{swipeDelete}">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/delete_white_24dp" />
                </FrameLayout>

                <!-- Your main layout here -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/chapterBookmarkTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="sample"
                                    android:textColor="@color/colorMain"
                                    android:textSize="@dimen/font_size_big" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:backgroundTint="@android:color/transparent"
                                    android:onClick="@{clickOptionMenuListener}"
                                    android:src="@drawable/more_vert_black_36dp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/titleBookmarkTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="sample" />

                            <TextView
                                android:id="@+id/dateBookmarkTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:drawableLeft="@drawable/date_range_black_18dp"
                                android:drawablePadding="5dp"
                                android:text="date sample" />

                            <TextView
                                android:id="@+id/positionBookmarkTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:drawableLeft="@drawable/schedule_black_18dp"
                                android:drawablePadding="5dp"
                                android:text="date time" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            style="@style/Widget.App.Button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/colorMain"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:onClick="@{goToBookmarks}"
                            android:text="@string/goTo" />

                    </LinearLayout>
                </FrameLayout>

            </com.chauthai.swipereveallayout.SwipeRevealLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>