<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="audiobook"
            type="com.audiobookz.nz.app.audiobookList.data.Audiobook" />

        <variable
            name="openBookDetail"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:onClick="@{openBookDetail}">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/img_card_featured"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:imageFromUrl="@{audiobook.cover_image}" />

            <TextView
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_gravity="left"
                android:text="@{audiobook.title}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/colorTea"
                tools:text="audiobookCategory"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/bookPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_gravity="left"
                android:text="@{`NZ$`+audiobook.price+@string/or+ '('+audiobook.credit_price+@string/bc+')'}"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"/>

            <RatingBar
                android:id="@+id/rateViewList"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>