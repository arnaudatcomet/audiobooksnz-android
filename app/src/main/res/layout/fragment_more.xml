<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="wishListClick"
        type="android.view.View.OnClickListener" />
    <variable
        name="addCreditClick"
        type="android.view.View.OnClickListener" />
    <import type="android.view.View" />
</data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context=".more.ui.MoreFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/addCreditsCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="@{addCreditClick}">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addCreditsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/addCredits" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_black_36dp"
                    android:gravity="right"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/currentPlanCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentPlanTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/currentPlan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_black_36dp"
                    android:gravity="right"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/wishListCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:onClick="@{wishListClick}">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wishListTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/wishList" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/next_black_36dp"
                    android:gravity="right"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>