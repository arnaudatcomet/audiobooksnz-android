<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/margin_normal">

    <data>
        <variable
            name="isDefault"
            type="Boolean" />
        <variable
            name="card"
            type="com.audiobookz.nz.app.more.data.CardDetailData"/>
        <variable
            name="remove"
            type="android.view.View.OnClickListener"/>
        <variable
            name="setCardDefault"
            type="android.view.View.OnClickListener"/>
        <import type="android.view.View"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        app:contentPadding="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:clickable="true"
        android:onClick="@{setCardDefault}">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/first_fragment_label"
                android:src="@drawable/create_card"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toRightOf="@+id/image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardBandTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:text="@{card.brand}"
                    android:textColor="@color/black"
                    tools:text="brand"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:id="@+id/cardLast4Txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@{card.last4}"
                        android:textColor="@color/black"
                        tools:text="last4"
                        android:layout_marginRight="5dp"
                         />

                    <TextView
                        android:id="@+id/cardExpiredMTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@{card.exp_month}"
                        android:textColor="@color/black"
                        tools:text="month"
                         />

                    <TextView
                        android:id="@+id/spaceTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="/"
                        android:textColor="@color/black"
                        tools:text="/"
                        />

                    <TextView
                        android:id="@+id/cardExpiredYTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@{card.exp_year}"
                        android:textColor="@color/black"
                        tools:text="year"
                        />

                </LinearLayout>

                <Button
                    android:textSize="10dp"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:onClick="@{remove}"
                    android:backgroundTint="@color/colorMain"
                    android:text="@string/remove" />
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imageDefault"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/first_fragment_label"
                android:src="@drawable/check"
                android:visibility="@{isDefault? View.VISIBLE : View.INVISIBLE}"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>