<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="audioFeatured"
            type="com.audiobookz.nz.app.audiobookList.data.Audiobook"/>
        <variable
            name="authorsName"
            type="String"/>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>

        <import type="android.view.View"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_card_featured"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                app:glideImageURL="@{audioFeatured.cover_image}"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{audioFeatured.title}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/font_size_normal"
                android:layout_below="@id/img_card_featured"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:onClick="@{clickListener}"/>

            <TextView
                android:id="@+id/txtNameAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_gravity="center"
                android:text="@{authorsName}"
                android:textSize="@dimen/font_size_small"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>