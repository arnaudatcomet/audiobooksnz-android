<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="localBook"
            type="com.audiobookz.nz.app.mylibrary.data.LocalBookData" />

        <variable
            name="authors"
            type="String" />

        <variable
            name="clickDeleteListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="clickDirectPlay"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:onClick="@{clickDeleteListener}">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgCardCloud"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    app:imageFromUrl="@{localBook.image_url}" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/CardProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/colorTea"
                    app:cardCornerRadius="25dp"
                    android:clickable="true"
                    android:onClick="@{clickDirectPlay}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/play40"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="2dp"
                    android:text="@{localBook.title}"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/colorTea"
                    android:textSize="@dimen/font_size_normal" />

                <TextView
                    android:id="@+id/txtNameAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtBookName"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{authors}"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>