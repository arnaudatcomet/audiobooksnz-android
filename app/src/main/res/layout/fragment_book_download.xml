<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="urlImage"
            type="String" />

        <variable
            name="nameBookDownload"
            type="String" />

        <variable
            name="statusButton"
            type="android.view.View.OnClickListener" />

        <variable
            name="goToPlayerClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="downloadStatus"
            type="String" />

        <variable
            name="bookStatus"
            type="String" />

        <variable
            name="contentProcess"
            type="int" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".mylibrary.ui.BookDownloadFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/imgCardBookDownload"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        app:imageFromUrl="@{urlImage}" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtNameBookDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="@{nameBookDownload}"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/colorMain"
                        android:onClick="@{statusButton}"
                        android:text="@{bookStatus}"
                        android:textAllCaps="false" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/linear_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/statusTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@{downloadStatus}" />

                    <TextView
                        android:id="@+id/percentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@{Integer.toString(contentProcess)+'%'}" />
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/progress_download"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:progress="@{contentProcess}" />
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imgPlayDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:onClick="@{goToPlayerClick}"
            android:src="@drawable/multimedia"
            app:backgroundTint="@color/colorMain"
            app:elevation="0dp"
            app:fabCustomSize="75dp"
            app:maxImageSize="24dp"
            app:tint="#FFFFFF" />

    </RelativeLayout>
</layout>