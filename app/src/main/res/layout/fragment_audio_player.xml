<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="urlImage"
            type="String" />

        <variable
            name="speedSelectClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="chapterSelectClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="sleepTimeSelectClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="addToBookmarkClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="skipPreviousClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="replay30sClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="playClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="forward30sClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="skipNextClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        tools:context=".player.ui.AudioPlayerFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:id="@+id/imgCardBookDownload"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        app:imageFromUrl="@{urlImage}" />

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/timeSpentTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="00.00" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/progressPlayerTimePlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/timeLeftTxt"
                        android:layout_toRightOf="@+id/timeSpentTxt"
                        />

                    <TextView
                        android:id="@+id/timeLeftTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="00.00" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/skipPreviousButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:src="@drawable/skip_previous_48dp"
                        android:onClick="@{skipPreviousClick}"/>

                    <ImageButton
                        android:id="@+id/replay30sButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:src="@drawable/replay_30_48dp"
                        android:onClick="@{replay30sClick}"/>

                    <ImageButton
                        android:id="@+id/playButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_sharp_play"
                        android:src="@drawable/play_arrow96"
                        android:onClick="@{playClick}"/>

                    <ImageButton
                        android:id="@+id/forward30sButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:src="@drawable/forward_30_48dp"
                        android:onClick="@{forward30sClick}"/>

                    <ImageButton
                        android:id="@+id/skipNextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:src="@drawable/skip_next_48dp"
                        android:onClick="@{skipNextClick}"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/layout_bottom_option"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/speedLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:onClick="@{speedSelectClick}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/speed_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="@string/speed" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chapterLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:onClick="@{chapterSelectClick}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/chapter_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="@string/chapter" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sleepTimeLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:onClick="@{sleepTimeSelectClick}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/time_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="@string/sleepTime" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bookMarkLinear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:onClick="@{addToBookmarkClick}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/bookmarks_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text="@string/bookMark" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</layout>