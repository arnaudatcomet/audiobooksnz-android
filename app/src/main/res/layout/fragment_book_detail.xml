<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="book"
            type="com.audiobookz.nz.app.bookdetail.data.BookDetail"/>
        <variable
            name="viewModel"
            type="com.audiobookz.nz.app.bookdetail.ui.BookDetailViewModel"/>
        <variable
            name="count"
            type="String"
            />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/slug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{count}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.description}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.cover_image}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.price}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/price_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.price_currency}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/avg_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.avg_rating}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/cover_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.cover_image_url}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
        <TextView
            android:id="@+id/review_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{book.review_count}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="buy"
        android:onClick="@{()->viewModel.addCart()}"
        />

    </LinearLayout>
    </ScrollView>
</layout>