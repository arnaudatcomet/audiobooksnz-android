<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="openAudiobookList"
            type="android.view.View.OnClickListener"/>
        <variable
            name="openSubCategory"
            type="android.view.View.OnClickListener"/>
        <variable
            name="audioCategory"
            type="com.audiobookz.nz.app.browse.categories.data.Category"/>
        <import type="android.view.View"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:onClick="@{openAudiobookList}">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="@{audioCategory.title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Category"
            android:textColor="@color/colorTea"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:text=">"
            android:gravity="right"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text=">"
            android:onClick="@{openSubCategory}"
            android:visibility='@{audioCategory.sub_category_count.equals("0")? View.GONE : View.VISIBLE, default = gone}' />

    </androidx.cardview.widget.CardView>

</layout>