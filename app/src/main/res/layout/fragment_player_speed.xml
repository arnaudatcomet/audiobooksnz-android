            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{select125Click}">

            <TextView
                android:id="@+id/speed125xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@{is125Click? @color/colorYellowBorder:@android:color/black}"
                android:text="1.25x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed125xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="@{is125Click? View.VISIBLE:View.GONE}">>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed15x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{select15Click}">

            <TextView
                android:id="@+id/speed15xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@{is15Click? @color/colorYellowBorder:@android:color/black}"
                android:text="1.5x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed15xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="@{is15Click? View.VISIBLE:View.GONE}">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed175x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{select175Click}">

            <TextView
                android:id="@+id/speed175xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
