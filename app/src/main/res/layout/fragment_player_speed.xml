<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="selectClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".player.ui.PlayerSpeedFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/speed05x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{selectClick}">

            <TextView
                android:id="@+id/speed05xText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="0.5x"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed05xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed075x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{selectClick}">

            <TextView
                android:id="@+id/speed075xText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="0.75x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed075xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed1x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{selectClick}">

            <TextView
                android:id="@+id/speed1xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellowBorder"
                android:text="1x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed1xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed125x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{selectClick}">

            <TextView
                android:id="@+id/speed125xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.25x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed125xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed15x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{selectClick}">

            <TextView
                android:id="@+id/speed15xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed15xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speed175x"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="@{selectClick}">

            <TextView
                android:id="@+id/speed175xText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.75x" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/speed175xIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:backgroundTint="@android:color/holo_orange_light"
                app:cardCornerRadius="15dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/done_white_18dp" />

            </com.google.android.material.card.MaterialCardView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>