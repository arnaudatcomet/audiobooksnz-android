<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mylibrary.ui.MyLibraryFragment">
    <data>
        <variable
            name="isTablet"
            type="Boolean" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/filterBookView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/tab_layout_bg"
            app:defaultQueryHint="@string/searchLibrary"
            app:iconifiedByDefault="false"
            app:searchIcon="@null" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_my_library"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@drawable/tab_layout_bg"
            android:padding="0dp"
            app:tabBackground="@drawable/tab_layout_selector"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@color/colorMain"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cloudLibrary"
                />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deviceLibrary"
                />

        </com.google.android.material.tabs.TabLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/tab_view_pager_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/imgPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/multimedia"
                app:backgroundTint="@color/colorMain"
                app:elevation="0dp"
                app:fabCustomSize="75dp"
                app:maxImageSize="24dp"
                app:tint="#FFFFFF" />
        </RelativeLayout>

    </LinearLayout>

</layout>